@model prjCore.Models.Weapon

@{
    ViewData["Title"] = "武器編輯";
}

<h1>
    <img src="~/lib/pic/武器編輯-(黑色文字圖透明背景)_1.png"  width="150"  />
</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="系列名稱" class="control-label"></label>
                <input asp-for="系列名稱" class="form-control" />
