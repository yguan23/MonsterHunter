@model IEnumerable<prjCore.Models.Monster>

@{
    ViewData["Title"] = "魔物列表";
}

<h1>
    <img src="~/lib/pic/魔物列表-(黑色文字圖透明背景)_1.png" width="150"/>
</h1>
<p>


    @using (Html.BeginForm("ShowQuery", "Monster"))
    {
<p>
    <img src="~/lib/pic/系列名稱-(黑色文字圖透明背景)_1.png" width="100" /> ：@Html.TextBox("keyword")
    <input type="submit" value="查詢">
</p>
}
    </p>

<table class="table table-hover" >
    <thead style="width: 100%; top: 0; position: sticky; background-color: #FFEBCD; ">
        <tr>
            <th>
                <img src="~/lib/pic/名稱-(黑色文字圖透明背景)_1.png" width="90"/>
            </th>
            <th>
                <img src="~/lib/pic/種類-(黑色文字圖透明背景)_1.png" width="90"/>
            </th>
            <th>
                <img src="~/lib/pic/弱點武器-(黑色文字圖透明背景)_1.png" width="90"/>
            </th>
            <th>
                <img src="~/lib/pic/弱點部位-(黑色文字圖透明背景)_1.png" width="90"/>
            </th>
            <th>
                <img src="~/lib/pic/弱點屬性-(黑色文字圖透明背景)_1.png" width="90"/>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.種類)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.弱點武器)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.弱點部位)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.弱點屬性)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <img src="~/lib/pic/編輯-(黑色文字圖透明背景)_1.png" width="30" />
                     </a> 
                    @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.Id">
                    <img src="~/lib/pic/刪除-(黑色文字圖透明背景)_1.png" width="30" />
                </a>
                </td>
            </tr>
        }
    </tbody>
</table>
