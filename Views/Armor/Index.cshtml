@model IEnumerable<prjCore.Models.Armor>

@{
    ViewData["Title"] = "防具列表";
}
@*防具列表按鈕連結之內容*@
<h1>
    <img src="~/lib/pic/防具列表-(黑色文字圖透明背景)_1.png" width="150" />
</h1>
<p>


    @using (Html.BeginForm("ShowQuery", "Armor"))//利用BeginForm執行Armor底下的ShowQuery方法
    {

    <p>
        <img src="~/lib/pic/系列名稱-(黑色文字圖透明背景)_1.png" width="100" /> ：@Html.TextBox("keyword")
        <input type="submit" value="查詢"><!--讓使用者輸入的欄位以及可以按下查詢的按鈕-->
    </p>
}
    </p>





    <table class="table table-hover">
        @*建立表格存放資料表內容*@
    <thead style="width: 100%;
            top: 0;
            position: sticky;
            background-color: #EEE9BF; ">
        @*為防具之列，並在抵達最上方時維持在上方*@
        <tr>
            <th>
                <img src="~/lib/pic/系列名稱-(黑色文字圖透明背景)_1.png" width="100" />
            </th>
            <th>
                <img src="~/lib/pic/頭盔-(黑色文字圖透明背景)_1.png" width="60" />
            </th>
            <th>
                <img src="~/lib/pic/鎧甲-(黑色文字圖透明背景)_1.png" width="60" />
            </th>
            <th>
                <img src="~/lib/pic/腕甲-(黑色文字圖透明背景)_1.png" width="60" />
            </th>
            <th>
                <img src="~/lib/pic/腰甲-(黑色文字圖透明背景)_1.png" width="60" />
            </th>
            <th>
                <img src="~/lib/pic/護腿-(黑色文字圖透明背景)_1.png" width="60" />
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.系列名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.頭盔)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.鎧甲)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.腕甲)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.腰甲)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.護腿)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        @*編輯功能*@
                    <img src="~/lib/pic/編輯-(黑色文字圖透明背景)_1.png" width="30" />
                </a>
                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.Id">
                    @*刪除功能*@
                <img src="~/lib/pic/刪除-(黑色文字圖透明背景)_1.png" width="30" />
            </a>
        </td>
    </tr>
}
    </tbody>
</table>
